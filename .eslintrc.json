{
    "env": {
        "browser": true,
        "es2021": true,
        "node": true
    },
    "extends": [
        "plugin:vue/essential",
        "standard"
    ],
    "parserOptions": {
        "ecmaVersion": "latest",
        "parser": "@typescript-eslint/parser",
        "sourceType": "module"
    },
    "plugins": [
        "vue",
        "@typescript-eslint"
    ],
    "ignorePatterns": [
        "dist/**/*",
        "node_modules/**/*",
        "public/**/*",
        "resources/**/*"
    ],
    "rules": {
        "no-trailing-spaces": "off",
        "vue/multi-word-component-names": "off",
        "no-undef": "off"
    }
}
